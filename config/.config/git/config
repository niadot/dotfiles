[init]
	defaultBranch = main

# delta pager
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only  # git add -p用
[delta]
	navigate = true      # n/Nでファイル間移動
	line-numbers = true

# diff/merge改善
[merge]
	conflictstyle = diff3  # base含む3way表示
[diff]
	colorMoved = default   # 移動行を色分け
